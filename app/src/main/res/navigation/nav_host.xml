<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/listScreenFragment">

    <fragment
        android:id="@+id/listScreenFragment"
        android:name="com.example.satellites_app.ui.listScreen.SatelliteListFragment"
        android:label="ListScreenFragment"
        tools:layout="@layout/fragment_list_satellite">
        <action
            android:id="@+id/action_listScreenFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.satellites_app.ui.detail.SatelliteDetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail_satellite">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>

</navigation>